   return list.addEventListener('change', handleResize);\r\n            }\r\n            return list.addListener(handleResize);\r\n        });\r\n        return () => mediaQueryList.forEach(list => {\r\n            if (list.removeEventListener) {\r\n                return list.removeEventListener('change', handleResize);\r\n            }\r\n            return list.removeListener(handleResize);\r\n        });\r\n    }, [queries]);\r\n    return matches;\r\n};\r\nconst defaultContext = {\r\n    min: {\r\n        isSm: false,\r\n        isMd: false,\r\n        isLg: false,\r\n        isXl: false,\r\n    },\r\n    max: {\r\n        isSm: false,\r\n        isMd: false,\r\n        isLg: false,\r\n        isXl: false,\r\n    },\r\n};\r\nconst BreakPointContext = React.createContext(defaultContext);\r\nexport function useBreakPoint(key) {\r\n    const context = useContext(BreakPointContext);\r\n    return key ? context[key] : context;\r\n}\r\nexport const BreakPointProvider = ({ children, }) => {\r\n    const [minSm, minMd, minLg, minXl] = useMatchMedia(Object.values(minMatchMediaQueries));\r\n    const [maxSm, maxMd, maxLg, maxXl] = useMatchMedia(Object.values(maxMatchMediaQueries));\r\n    return (React.createElement(BreakPointContext.Provider, { value: {\r\n            min: {\r\n                isSm: minSm,\r\n                isMd: minMd,\r\n                isLg: minLg,\r\n                isXl: minXl,\r\n            },\r\n            max: {\r\n                isSm: maxSm,\r\n                isMd: maxMd,\r\n                isLg: maxLg,\r\n                isXl: maxXl,\r\n            },\r\n        } }, children));\r\n};\r\n//# sourceMappingURL=index.js.map","references":["/Users/joelpierre/Sites/JPPdesigns/use-breakpoint/node_modules/@types/react/index.d.ts"],"map":"{\"version\":3,\"file\":\"index.js\",\"sourceRoot\":\"\",\"sources\":[\"../../../../src/index.tsx\"],\"names\":[],\"mappings\":\"AAAA,OAAO,KAAK,EAAE,EAAiB,UAAU,EAAE,SAAS,EAAE,QAAQ,EAAE,MAAM,OAAO,CAAC;AAe9E,MAAM,